html, body
  width 100%
  height 100%
  padding 0
  margin 0

.app
  width 100%
  height 100%


  .header
    height 45px
    width 100%
    background-color black
    float left

  .add-item-container
    float left

    .row
      width 100%
      float left

      .column-big
        float: left
        width 200px
        height 40px
        border solid 1px black
        text-align center

      .column
        float left
        width 80px
        height 40px
        border solid 1px black
        text-align center

      .input
        width 80%
        height 80%
        text-align center

      .save
        float left
        width 90%
        height 90%
        background-color lightblue
        margin-top 2px
        border-radius 5px
        margin-left 5%

      .title
        background-color lightblue

      .delete
        background-color red
        border-radius 10px
        margin-top 8px
        float right